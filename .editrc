# Use vi editing mode in the MySQL client
mysql:bind -v

# Enable autocompletion with Tab
bind "^I" rl_complete

# Basic key bindings for navigation
bind "^[[H" ed-move-to-beg  # Home key
bind "^[[F" ed-move-to-end  # End key
bind "^[[3~" ed-delete-next-char  # Delete key
bind "^[[5~" ed-search-prev-history  # Page Up key
bind "^[[6~" ed-search-next-history  # Page Down key

# Incremental search
bind "^R" ed-search-prev-history

# Additional common actions
bind "^A" ed-move-to-beg
bind "^E" ed-move-to-end
bind "^K" ed-kill-line
bind "^U" ed-kill-line
bind "^W" ed-delete-prev-word

